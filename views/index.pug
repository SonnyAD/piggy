html
  head
    title= title
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.6/css/uikit.min.css")
    link(rel="stylesheet" href="css/main.css")

  body
    .uk-container.uk-margin-small
      div(id="grid" class="uk-child-width-1-4@s uk-grid-match" uk-sortable="handle: .uk-sortable-handle" uk-grid="masonry: false" uk-height-match="target: > div > .group")
        div(class="uk-display-inline-block")
          h4 Group 0
          div(class="group" uk-sortable="group: sortable-group")
            each val in values
              div(class="uk-card uk-card-default uk-card-body uk-width-auto uk-margin uk-card-hover uk-padding-small" id="card-"+val.badge)
                form
                  span(class="uk-sortable-handle uk-margin-small-right" uk-icon="icon: table")
                  input(class="uk-card-title uk-input uk-form-blank uk-form-width-large uk-text-muted uk-padding-remove" type="text" placeholder="Project name" value=val.title)
                  div(class="uk-card-badge uk-label clickable" onclick='increase('+val.badge+')')= val.badge
                  textarea(class="uk-width-1-1 uk-form-blank uk-margin uk-padding-remove")= val.description
                  .uk-button-group.uk-position-bottom-right
                    .uk-button.uk-button-primary(onclick='increase('+val.badge+',0.25)') +25'
                    .uk-button.uk-button-danger(onclick='increase('+val.badge+',0.75)') +45'

            
      div(class="uk-position-top-right uk-position-small uk-display-inline-block")
        ul(class="uk-iconnav uk-iconnav-vertical")
            li
              a(href="#" uk-icon="icon: plus")
            li
              a(href="#" uk-icon="icon: file-edit")
            li
              a(href="#" uk-icon="icon: copy")
            li
              a(href="#" uk-icon="icon: trash")

    // Scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.6/js/uikit.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.6/js/uikit-icons.min.js")
    script(src="https://cdn.jsdelivr.net/npm/pouchdb@7.0.0/dist/pouchdb.min.js")
    script(src="https://unpkg.com/umbrellajs")
    script(src="js/main.js")